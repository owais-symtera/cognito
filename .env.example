# CognitoAI Engine Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/cognito_ai_engine
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cognito_ai_engine
DATABASE_USER=user
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# External API Keys for Pharmaceutical Intelligence
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GROK_API_KEY=your_grok_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# LLM Model Configuration (Optional - defaults provided)
# OpenAI
OPENAI_MODEL_NAME=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Anthropic Claude
ANTHROPIC_MODEL_NAME=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TIMEOUT=30
ANTHROPIC_MAX_RETRIES=3

# Perplexity
PERPLEXITY_MODEL_NAME=pplx-70b-online
PERPLEXITY_MAX_TOKENS=4096
PERPLEXITY_TEMPERATURE=0.7
PERPLEXITY_TIMEOUT=30
PERPLEXITY_MAX_RETRIES=3

# Google Gemini
GEMINI_MODEL_NAME=gemini-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT=30
GEMINI_MAX_RETRIES=3

# X.AI Grok
GROK_MODEL_NAME=grok-1
GROK_MAX_TOKENS=4096
GROK_TEMPERATURE=0.7
GROK_TIMEOUT=30
GROK_MAX_RETRIES=3

# Tavily Search
TAVILY_MAX_RESULTS=10
TAVILY_TIMEOUT=30
TAVILY_MAX_RETRIES=3

# Authentication & Security
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Application Configuration
APP_NAME=CognitoAI Engine
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Background Processing (Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Pharmaceutical Processing Configuration
PHARMACEUTICAL_CATEGORIES_COUNT=17
PROCESSING_TIMEOUT_MINUTES=15
SOURCE_VERIFICATION_ENABLED=true
CONFLICT_RESOLUTION_ENABLED=true

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_COLLECTION_ENABLED=true

# File Storage Configuration
UPLOAD_MAX_SIZE_MB=10
STORAGE_PATH=./storage

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cognito-ai.com